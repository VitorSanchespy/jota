# NPJ Professional - Environment Configuration

# Database Configuration
DB_HOST=npj-professional-db
DB_USER=appuser
DB_PASS=app123
DB_NAME=npjdatabase

# Redis Configuration
REDIS_HOST=npj-professional-redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=npj-professional-super-secret-key-2024
JWT_REFRESH_SECRET=npj-professional-refresh-secret-key-2024

# Server Configuration
PORT=3002
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=http://localhost:5174,http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=52428800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=info

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Google Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/auth/google/callback

# Microsoft Graph/Outlook Integration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3002/auth/microsoft/callback

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=npj-professional-session-secret-2024

# Performance Configuration
CACHE_TTL=3600
COMPRESSION_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30